<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="de.pasligh.android.hauptkanalmemory.GameActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:cropToPadding="false"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/GameContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textViewTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="0:00"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="@color/black_overlay" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            app:cardCornerRadius="@dimen/smallest_margin"
            app:cardElevation="@dimen/small_margin">

            <ImageButton
                android:id="@+id/imageButtonOption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:cropToPadding="true"
                app:srcCompat="@mipmap/ic_launcher" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_margin"
            app:cardCornerRadius="@dimen/smallest_margin"
            app:cardElevation="@dimen/small_margin">

            <ImageButton
                android:id="@+id/imageButtonOption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:cropToPadding="true"
                android:elevation="@dimen/fab_margin"
                app:srcCompat="@android:drawable/ic_media_ff" />


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cardViewOption3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            app:cardCornerRadius="@dimen/smallest_margin"
            app:cardElevation="@dimen/small_margin">

            <ImageButton
                android:id="@+id/imageButtonOption3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@null"
                android:cropToPadding="true"
                app:srcCompat="@android:drawable/ic_media_ff" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            app:cardCornerRadius="@dimen/smallest_margin"
            app:cardElevation="@dimen/small_margin">

            <TextView
                android:id="@+id/textViewScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/round_corner"
                android:padding="4dp"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_light" />
        </android.support.v7.widget.CardView>


    </RelativeLayout>

</FrameLayout>
